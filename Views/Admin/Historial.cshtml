@model List<ControlAccesoFraccionamiento.Models.RegistrosAcceso>

@{
    ViewData["Title"] = "Historial de Accesos";
    Layout = "_Layout";
}

<div style="max-width: 1400px; margin: 0 auto; padding: 25px 15px;">
    <!-- Encabezado -->
    <div style="background: linear-gradient(135deg, #7c3aed, #6d28d9); color: white; padding: 25px; border-radius: 12px; margin-bottom: 25px; box-shadow: 0 4px 12px rgba(124, 58, 237, 0.2);">
        <h2 style="margin: 0; display: flex; align-items: center; gap: 12px; font-size: 1.8rem;">
            <i class="bi bi-clock-history"></i> Historial de Accesos
        </h2>
        <p style="margin: 10px 0 0 0; opacity: 0.9; font-size: 1rem;">
            Últimos 100 registros de entradas y salidas en el sistema
        </p>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <!-- Sin registros -->
        <div style="background: white; padding: 40px; border-radius: 10px; text-align: center; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin-bottom: 25px;">
            <i class="bi bi-database-x" style="font-size: 48px; color: #9ca3af; margin-bottom: 15px;"></i>
            <p style="color: #6b7280; font-size: 1.1rem;">No hay registros disponibles</p>
        </div>
    }
    else
    {
        <!-- Tabla mejorada -->
        <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin-bottom: 30px;">
            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead style="background: linear-gradient(135deg, #7c3aed, #6d28d9); color: white;">
                        <tr>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #5b21b6;">Fecha Entrada</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #5b21b6;">Fecha Salida</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #5b21b6;">Placa</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #5b21b6;">Visitante</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #5b21b6;">Unidad Destino</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #5b21b6;">Guardia</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #5b21b6;">Estado</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr style="border-bottom: 1px solid #e5e7eb; transition: background 0.2s;">
                                <!-- Fecha Entrada -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    @if (r.FechaEntrada.HasValue)
                                    {
                                        <div style="font-weight: 500; color: #1f2937;">
                                            @r.FechaEntrada.Value.ToString("dd/MM/yyyy")
                                        </div>
                                        <div style="font-size: 13px; color: #6b7280;">
                                            @r.FechaEntrada.Value.ToString("HH:mm")
                                        </div>
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic; font-size: 14px;">Sin registro</span>
                                    }
                                </td>

                                <!-- Fecha Salida (LOGICA MEJORADA) -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    @if (r.EstadoAutorizacion?.ToLower() == "rechazado")
                                    {
                                        <!-- RECHAZADO: Nunca entró, no tiene fecha de salida -->
                                        <span style="color: #9ca3af; font-style: italic; font-size: 14px; font-weight: 500;">
                                            N/A
                                        </span>
                                        <div style="font-size: 12px; color: #ef4444;">
                                            (Acceso denegado)
                                        </div>
                                    }
                                    else if (r.EstadoAutorizacion?.ToLower() == "pendiente")
                                    {
                                        <!-- PENDIENTE: Esperando aprobación/rechazo -->
                                        <span style="color: #f59e0b; font-weight: 500; font-size: 14px;">
                                            Por autorizar
                                        </span>
                                        <div style="font-size: 12px; color: #92400e;">
                                            (Esperando respuesta)
                                        </div>
                                    }
                                    else if (r.FechaSalida.HasValue)
                                    {
                                        <!-- APROBADO y YA SALIÓ: Muestra fecha -->
                                        <div style="font-weight: 500; color: #1f2937;">
                                            @r.FechaSalida.Value.ToString("dd/MM/yyyy")
                                        </div>
                                        <div style="font-size: 13px; color: #6b7280;">
                                            @r.FechaSalida.Value.ToString("HH:mm")
                                        </div>
                                    }
                                    else
                                    {
                                        <!-- APROBADO y NO HA SALIDO: Está dentro -->
                                        <span style="color: #10b981; font-weight: 500; font-size: 14px;">
                                            No ha salido
                                        </span>
                                        <div style="font-size: 12px; color: #065f46;">
                                            (Dentro del fraccionamiento)
                                        </div>
                                    }
                                </td>

                                <!-- Placa -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <span style="background: #f1f5f9; font-family: monospace; padding: 6px 10px; border-radius: 4px; font-weight: 500; display: inline-block;">
                                        @(r.Vehiculo?.Placa ?? "-")
                                    </span>
                                </td>

                                <!-- Visitante -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <span style="font-weight: 500; color: #1f2937;">
                                        @(r.Visitante?.Nombre ?? "Residente")
                                    </span>
                                </td>

                                <!-- Unidad Destino -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <span style="font-weight: 500; color: #7c3aed;">
                                        @(r.ResidenteDestino?.Unidad ?? "-")
                                    </span>
                                </td>

                                <!-- Guardia -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <span style="color: #4b5563;">
                                        @(r.Guardia?.Nombre ?? "Sistema")
                                    </span>
                                </td>

                                <!-- Estado -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <span style="
                                          @if (r.EstadoAutorizacion?.ToLower() == "aprobado")
                                          {
                                                        <text>background: #d1fae5; color: #065f46;</text>
                                                }
                                                else if (r.EstadoAutorizacion?.ToLower() == "rechazado")
                                                {
                                                        <text>background: #fee2e2; color: #991b1b;</text>
                                                }
                                                else if (r.EstadoAutorizacion?.ToLower() == "pendiente")
                                                {
                                                        <text>background: #fef3c7; color: #92400e;</text>
                                                }
                                                else
                                                {
                                                        <text>background: #f3f4f6; color: #6b7280;</text>
                                                }
                                                padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 500; display: inline-block;">
                                                @r.EstadoAutorizacion?.ToUpper()
                                            </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Resumen -->
        <div style="background: #f8fafc; padding: 15px 20px; border-radius: 8px; margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
            <div style="color: #4b5563; font-weight: 500; display: flex; align-items: center; gap: 8px;">
                <i class="bi bi-list-check"></i>
                Mostrando @Model.Count registros
            </div>
            <div style="color: #6b7280; font-size: 14px;">
                Última actualización: @DateTime.Now.ToString("HH:mm")
            </div>
        </div>
    }

    <!-- Botón regresar -->
    <div style="display: flex; justify-content: center; margin-top: 20px;">
        <a href="/Admin/Index" style="background: #4b5563; color: white; padding: 12px 24px; border-radius: 6px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; font-weight: 500; transition: background 0.2s;">
            <i class="bi bi-arrow-left"></i> Regresar al Dashboard
        </a>
    </div>
</div>

<!-- Estilos para hover -->
<style>
    /* Efecto al pasar el mouse sobre las filas */
    table tbody tr:hover {
        background-color: #f8fafc;
    }

    /* Efecto hover en botón */
    a[href="/Admin/Index"]:hover {
        background: #374151;
        text-decoration: none;
    }

    /* Responsive para móviles */
    @@media (max-width: 768px) {
        div[style*="max-width: 1400px"] {
            padding: 15px 10px;
        }

        table th, table td {
            padding: 12px 8px !important;
            font-size: 14px;
        }

        .encabezado {
            padding: 20px 15px !important;
        }
    }
</style>