@using System.Linq
@{
    ViewData["Title"] = "Reportes";
    Layout = "_Layout";

    var accesosPorDia = ViewBag.AccesosPorDia as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    var ultimos7Dias = ViewBag.Ultimos7Dias as IEnumerable<DateTime> ?? Enumerable.Empty<DateTime>();
    var topUnidades = ViewBag.TopUnidades as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}

<div style="max-width: 1400px; margin: 0 auto; padding: 25px 15px;">
    <!-- Encabezado -->
    <div style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; padding: 25px; border-radius: 12px; margin-bottom: 25px; box-shadow: 0 4px 12px rgba(139, 92, 246, 0.2);">
        <h2 style="margin: 0; display: flex; align-items: center; gap: 12px; font-size: 1.8rem;">
            <i class="bi bi-graph-up-arrow"></i> Reportes y Estadísticas
        </h2>
        <p style="margin: 10px 0 0 0; opacity: 0.9; font-size: 1rem;">
            Análisis y métricas del sistema de control de acceso
        </p>
    </div>

    <!-- ============================================= -->
    <!-- SECCIÓN 1: BUSCADOR DE REPORTE DIARIO -->
    <!-- ============================================= -->
    <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin-bottom: 30px;">
        <div style="background: #f8fafc; padding: 18px 24px; border-bottom: 1px solid #e5e7eb;">
            <h3 style="margin: 0; display: flex; align-items: center; gap: 10px; color: #4b5563;">
                <i class="bi bi-calendar-week"></i> Reporte Diario
            </h3>
        </div>

        <div style="padding: 25px;">
            <form method="get" action="/Admin/ReporteDiario" style="display: flex; flex-wrap: wrap; gap: 15px; align-items: center;">
                <div style="flex: 1; min-width: 250px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">
                        <i class="bi bi-calendar-date"></i> Ver reporte por fecha:
                    </label>
                    <input type="date" name="fecha"
                           style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px; background: white; color: #4b5563;" />
                </div>

                <div style="margin-top: 8px;">
                    <button type="submit"
                            style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; border: none; padding: 12px 24px; border-radius: 6px; font-weight: 500; cursor: pointer; display: flex; align-items: center; gap: 8px; transition: all 0.2s;">
                        <i class="bi bi-file-earmark-text"></i> Abrir Reporte
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- ============================================= -->
    <!-- SECCIÓN 2: RESUMEN RÁPIDO -->
    <!-- ============================================= -->
    <h3 style="color: #4b5563; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 2px solid #e5e7eb; display: flex; align-items: center; gap: 10px;">
        <i class="bi bi-speedometer2"></i> Resumen General
    </h3>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 20px; margin-bottom: 40px;">
        <!-- Total Residentes -->
        <div style="background: white; border-left: 4px solid #3b82f6; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Residentes</div>
                    <div style="font-size: 32px; font-weight: 700; color: #2563eb; margin: 8px 0;">
                        @((ViewBag.TotalResidentes != null) ? ViewBag.TotalResidentes.ToString() : "0")
                    </div>
                </div>
                <i class="bi bi-people-fill" style="font-size: 32px; color: #60a5fa; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Total Visitantes -->
        <div style="background: white; border-left: 4px solid #f59e0b; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Visitantes</div>
                    <div style="font-size: 32px; font-weight: 700; color: #d97706; margin: 8px 0;">
                        @((ViewBag.TotalVisitantes != null) ? ViewBag.TotalVisitantes.ToString() : "0")
                    </div>
                </div>
                <i class="bi bi-person-badge" style="font-size: 32px; color: #fbbf24; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Total Vehículos -->
        <div style="background: white; border-left: 4px solid #10b981; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Vehículos</div>
                    <div style="font-size: 32px; font-weight: 700; color: #059669; margin: 8px 0;">
                        @((ViewBag.TotalVehiculos != null) ? ViewBag.TotalVehiculos.ToString() : "0")
                    </div>
                </div>
                <i class="bi bi-car-front-fill" style="font-size: 32px; color: #34d399; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Accesos Hoy -->
        <div style="background: white; border-left: 4px solid #8b5cf6; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Accesos Hoy</div>
                    <div style="font-size: 32px; font-weight: 700; color: #7c3aed; margin: 8px 0;">
                        @((ViewBag.AccesosHoy != null) ? ViewBag.AccesosHoy.ToString() : "0")
                    </div>
                </div>
                <i class="bi bi-door-open-fill" style="font-size: 32px; color: #a78bfa; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Pendientes Hoy -->
        <div style="background: white; border-left: 4px solid #f97316; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Pendientes Hoy</div>
                    <div style="font-size: 32px; font-weight: 700; color: #ea580c; margin: 8px 0;">
                        @((ViewBag.PendientesHoy != null) ? ViewBag.PendientesHoy.ToString() : "0")
                    </div>
                </div>
                <i class="bi bi-clock-history" style="font-size: 32px; color: #fb923c; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Incidentes Hoy -->
        <div style="background: white; border-left: 4px solid #ef4444; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Incidentes Hoy</div>
                    <div style="font-size: 32px; font-weight: 700; color: #dc2626; margin: 8px 0;">
                        @((ViewBag.IncidentesHoy != null) ? ViewBag.IncidentesHoy.ToString() : "0")
                    </div>
                </div>
                <i class="bi bi-exclamation-triangle-fill" style="font-size: 32px; color: #f87171; opacity: 0.7;"></i>
            </div>
        </div>
    </div>

    <!-- ============================================= -->
    <!-- SECCIÓN 3: ACCESOS POR DÍA (ÚLTIMOS 7 DÍAS) -->
    <!-- ============================================= -->
    <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin-bottom: 30px;">
        <div style="background: #f8fafc; padding: 18px 24px; border-bottom: 1px solid #e5e7eb;">
            <h3 style="margin: 0; display: flex; align-items: center; gap: 10px; color: #4b5563;">
                <i class="bi bi-bar-chart"></i> Accesos por Día (Últimos 7 días)
            </h3>
        </div>

        @if (!ultimos7Dias.Any())
        {
            <div style="padding: 40px 20px; text-align: center;">
                <i class="bi bi-calendar-x" style="font-size: 48px; color: #9ca3af; margin-bottom: 15px;"></i>
                <p style="color: #6b7280; font-size: 1.1rem;">No hay datos para los últimos 7 días</p>
            </div>
        }
        else
        {
            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white;">
                        <tr>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #7c3aed; white-space: nowrap;">
                                <i class="bi bi-calendar"></i> Fecha
                            </th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #7c3aed; white-space: nowrap;">
                                <i class="bi bi-list-check"></i> Total
                            </th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #7c3aed; white-space: nowrap;">
                                <i class="bi bi-people"></i> Residentes
                            </th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #7c3aed; white-space: nowrap;">
                                <i class="bi bi-person-badge"></i> Visitantes
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dt in ultimos7Dias)
                        {
                            var fila = accesosPorDia.FirstOrDefault(a =>
                            {
                                try
                                {
                                    DateTime f = (DateTime)a.Fecha;
                                    return f.Date == dt.Date;
                                }
                                catch
                                {
                                    return false;
                                }
                            });

                            int total = fila != null ? (int)fila.Total : 0;
                            int residentes = fila != null ? (int)fila.Residentes : 0;
                            int visitantes = fila != null ? (int)fila.Visitantes : 0;

                            <tr style="border-bottom: 1px solid #e5e7eb; transition: background 0.2s;">
                                <!-- Fecha -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="font-weight: 600; color: #1f2937;">
                                        @dt.ToString("dd/MM/yyyy")
                                    </div>
                                    <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">
                                        @dt.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))
                                    </div>
                                </td>

                                <!-- Total -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="background: #f1f5f9; color: #1e40af; font-weight: 600; padding: 8px 12px; border-radius: 4px; display: inline-block; text-align: center; min-width: 50px;">
                                        @total
                                    </div>
                                </td>

                                <!-- Residentes -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="background: #dbeafe; color: #1d4ed8; font-weight: 600; padding: 8px 12px; border-radius: 4px; display: inline-block; text-align: center; min-width: 50px;">
                                        @residentes
                                    </div>
                                </td>

                                <!-- Visitantes -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="background: #fef3c7; color: #92400e; font-weight: 600; padding: 8px 12px; border-radius: 4px; display: inline-block; text-align: center; min-width: 50px;">
                                        @visitantes
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- ============================================= -->
    <!-- SECCIÓN 4: TOP UNIDADES MÁS VISITADAS -->
    <!-- ============================================= -->
    <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin-bottom: 30px;">
        <div style="background: #f8fafc; padding: 18px 24px; border-bottom: 1px solid #e5e7eb;">
            <h3 style="margin: 0; display: flex; align-items: center; gap: 10px; color: #4b5563;">
                <i class="bi bi-trophy"></i> Top Unidades Más Visitadas (Último mes)
            </h3>
        </div>

        @if (!topUnidades.Any())
        {
            <div style="padding: 40px 20px; text-align: center;">
                <i class="bi bi-house-x" style="font-size: 48px; color: #9ca3af; margin-bottom: 15px;"></i>
                <p style="color: #6b7280; font-size: 1.1rem;">No hay unidades con visitas registradas</p>
            </div>
        }
        else
        {
            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead style="background: linear-gradient(135deg, #10b981, #059669); color: white;">
                        <tr>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #047857; white-space: nowrap;">
                                <i class="bi bi-house-door"></i> Unidad
                            </th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #047857; white-space: nowrap;">
                                <i class="bi bi-graph-up"></i> Visitas
                            </th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; border-bottom: 2px solid #047857; white-space: nowrap;">
                                <i class="bi bi-bar-chart"></i> Progreso
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int maxVisitas = 0;
                            if (topUnidades.Any())
                            {
                                maxVisitas = topUnidades.Max(u => u.Visitas != null ? (int)u.Visitas : 0);
                            }
                        }

                        @foreach (var u in topUnidades)
                        {
                            string unidad = u.Unidad != null ? u.Unidad.ToString() : "(sin unidad)";
                            int visitas = u.Visitas != null ? (int)u.Visitas : 0;
                            int porcentaje = maxVisitas > 0 ? (visitas * 100) / maxVisitas : 0;

                            <tr style="border-bottom: 1px solid #e5e7eb; transition: background 0.2s;">
                                <!-- Unidad -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="display: flex; align-items: center; gap: 12px;">
                                        <div style="background: #dbeafe; color: #1d4ed8; width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                            @(unidad.Length > 5 ? unidad.Substring(0, 5) : unidad)
                                        </div>
                                        <div style="font-weight: 600; color: #1f2937;">@unidad</div>
                                    </div>
                                </td>

                                <!-- Visitas -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="background: #d1fae5; color: #065f46; font-weight: 600; padding: 8px 12px; border-radius: 4px; display: inline-block; text-align: center; min-width: 60px;">
                                        @visitas
                                    </div>
                                </td>

                                <!-- Barra de progreso -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="display: flex; align-items: center; gap: 12px;">
                                        <div style="flex: 1; background: #f3f4f6; height: 10px; border-radius: 5px; overflow: hidden;">
                                            <div style="background: linear-gradient(90deg, #10b981, #34d399); height: 100%; width: @(porcentaje)%; border-radius: 5px;"></div>
                                        </div>
                                        <div style="font-size: 14px; color: #6b7280; min-width: 40px; text-align: right;">
                                            @porcentaje%
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- ============================================= -->
    <!-- BOTÓN REGRESAR -->
    <!-- ============================================= -->
    <div style="display: flex; justify-content: center; margin-top: 30px; padding-top: 20px; border-top: 1px solid #e5e7eb;">
        <a href="/Admin/Index"
           style="background: #4b5563; color: white; padding: 12px 24px; border-radius: 6px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; font-weight: 500; transition: all 0.2s;">
            <i class="bi bi-arrow-left"></i> Regresar al Dashboard
        </a>
    </div>
</div>

<style>
    /* Efectos hover */
    table tbody tr:hover {
        background-color: #f8fafc;
    }

    button:hover, a[href="/Admin/Index"]:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-decoration: none;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        div[style*="max-width: 1400px"] {
            padding: 15px 10px;
        }

        .buscador-reporte {
            flex-direction: column;
            align-items: stretch !important;
        }

            .buscador-reporte input,
            .buscador-reporte button {
                width: 100%;
            }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr) !important;
            gap: 15px !important;
        }

        table th, table td {
            padding: 12px 8px !important;
            font-size: 14px;
        }
    }

    @@media (max-width: 480px) {
        .stats-grid {
            grid-template-columns: 1fr !important;
        }
    }
</style>