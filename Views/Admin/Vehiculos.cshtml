@model List<ControlAccesoFraccionamiento.Models.Vehiculo>

@{
    ViewData["Title"] = "Vehículos";
    Layout = "_Layout";

    var listaRes = ViewBag.Residentes as List<ControlAccesoFraccionamiento.Models.Residente>;
}

<div style="max-width: 1400px; margin: 0 auto; padding: 25px 15px;">
    <!-- Encabezado -->
    <div style="background: linear-gradient(135deg, #3b82f6, #2563eb); color: white; padding: 25px; border-radius: 12px; margin-bottom: 25px; box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h2 style="margin: 0; display: flex; align-items: center; gap: 12px; font-size: 1.8rem;">
                    <i class="bi bi-car-front-fill"></i> Gestión de Vehículos
                </h2>
                <p style="margin: 8px 0 0 0; opacity: 0.9; font-size: 1rem;">
                    Administra los vehículos registrados en el sistema
                </p>
            </div>
            <a href="/Admin/Index"
               style="background: rgba(255, 255, 255, 0.1); color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; font-weight: 500; border: 1px solid rgba(255, 255, 255, 0.2); transition: all 0.2s;">
                <i class="bi bi-arrow-left"></i> Regresar
            </a>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Mensaje"] != null)
    {
        <div style="background: #d1fae5; color: #065f46; padding: 14px 18px; border-radius: 8px; margin-bottom: 20px; border-left: 4px solid #10b981; display: flex; align-items: center; justify-content: space-between;">
            <div style="display: flex; align-items: center; gap: 10px;">
                <i class="bi bi-check-circle-fill" style="color: #10b981;"></i>
                <span>@TempData["Mensaje"]</span>
            </div>
            <button type="button" onclick="this.parentElement.style.display='none'" style="background: none; border: none; color: #065f46; cursor: pointer;">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div style="background: #fee2e2; color: #991b1b; padding: 14px 18px; border-radius: 8px; margin-bottom: 20px; border-left: 4px solid #ef4444; display: flex; align-items: center; justify-content: space-between;">
            <div style="display: flex; align-items: center; gap: 10px;">
                <i class="bi bi-exclamation-circle-fill" style="color: #ef4444;"></i>
                <span>@TempData["Error"]</span>
            </div>
            <button type="button" onclick="this.parentElement.style.display='none'" style="background: none; border: none; color: #991b1b; cursor: pointer;">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }

    <!-- ============================================= -->
    <!-- SECCIÓN 1: NUEVO VEHÍCULO (RESIDENTE) -->
    <!-- ============================================= -->
    <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin-bottom: 30px;">
        <div style="background: #eff6ff; padding: 18px 24px; border-bottom: 1px solid #dbeafe;">
            <h3 style="margin: 0; display: flex; align-items: center; gap: 10px; color: #1e40af;">
                <i class="bi bi-plus-circle"></i> Nuevo Vehículo (Asociado a Residente)
            </h3>
        </div>

        <div style="padding: 25px;">
            <form method="post" action="/Admin/CrearVehiculo">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 20px;">
                    <!-- Placa -->
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">
                            <i class="bi bi-tag"></i> Placa *
                        </label>
                        <input type="text" name="placa"
                               style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px; background: white; color: #4b5563;"
                               required />
                    </div>

                    <!-- Marca -->
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">
                            <i class="bi bi-building"></i> Marca
                        </label>
                        <input type="text" name="marca"
                               style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px; background: white; color: #4b5563;" />
                    </div>

                    <!-- Modelo -->
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">
                            <i class="bi bi-gear"></i> Modelo
                        </label>
                        <input type="text" name="modelo"
                               style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px; background: white; color: #4b5563;" />
                    </div>

                    <!-- Color -->
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">
                            <i class="bi bi-palette"></i> Color
                        </label>
                        <input type="text" name="color"
                               style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px; background: white; color: #4b5563;" />
                    </div>

                    <!-- Residente -->
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">
                            <i class="bi bi-person-check"></i> Residente *
                        </label>
                        <select name="residenteId"
                                style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px; background: white; color: #4b5563;"
                                required>
                            <option value="">-- Seleccionar residente --</option>
                            @foreach (var re in listaRes)
                            {
                                <option value="@re.Id">@re.Unidad - @re.Usuario?.Nombre</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Información y Botón -->
                <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
                    <div style="color: #6b7280; font-size: 0.875rem; flex: 1;">
                        <i class="bi bi-info-circle"></i> Los vehículos creados aquí se marcarán automáticamente como tipo "residente"
                    </div>

                    <button type="submit"
                            style="background: linear-gradient(135deg, #3b82f6, #2563eb); color: white; border: none; padding: 12px 24px; border-radius: 6px; font-weight: 500; cursor: pointer; display: inline-flex; align-items: center; gap: 8px; transition: all 0.2s;">
                        <i class="bi bi-plus-circle"></i> Crear Vehículo
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- ============================================= -->
    <!-- SECCIÓN 2: VEHÍCULOS DE RESIDENTES -->
    <!-- ============================================= -->
    <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin-bottom: 40px;">
        <div style="background: #f8fafc; padding: 18px 24px; border-bottom: 1px solid #e5e7eb; display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h3 style="margin: 0; display: flex; align-items: center; gap: 10px; color: #4b5563;">
                    <i class="bi bi-people"></i> Vehículos de Residentes
                </h3>
                <p style="margin: 5px 0 0 0; color: #6b7280; font-size: 0.95rem;">
                    Vehículos asociados a residentes del fraccionamiento
                </p>
            </div>

            @{
                int contadorResidentes = 0;
                foreach (var v in Model)
                {
                    var esResidente = v.VehiculosResidentes != null && v.VehiculosResidentes.Any();
                    if (esResidente) { contadorResidentes++; }
                }
            }

            <div style="color: #6b7280; font-size: 14px; background: white; padding: 6px 12px; border-radius: 20px; border: 1px solid #e5e7eb; display: flex; align-items: center; gap: 6px;">
                <i class="bi bi-car-front"></i>
                @contadorResidentes vehículos
            </div>
        </div>

        @if (contadorResidentes == 0)
        {
            <div style="padding: 60px 20px; text-align: center;">
                <i class="bi bi-car-front" style="font-size: 48px; color: #9ca3af; margin-bottom: 15px;"></i>
                <p style="color: #6b7280; font-size: 1.1rem; margin-bottom: 10px;">No hay vehículos de residentes registrados</p>
                <p style="color: #9ca3af;">Usa el formulario superior para crear vehículos asociados a residentes</p>
            </div>
        }
        else
        {
            <!-- Tabla -->
            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead style="background: #f1f5f9;">
                        <tr>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Placa</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Marca</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Modelo</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Color</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Asociado a</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Lista Negra</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in Model)
                        {
                            var esResidente = v.VehiculosResidentes != null && v.VehiculosResidentes.Any();
                            if (!esResidente) { continue; }

                            var residenteAsociado = v.VehiculosResidentes.FirstOrDefault()?.Residente;
                            var enLista = v.VehiculosListaNegras != null && v.VehiculosListaNegras.Any();

                            <tr style="border-bottom: 1px solid #e5e7eb; transition: background 0.2s;">
                                <!-- Placa -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <span style="background: #f1f5f9; font-family: monospace; padding: 8px 12px; border-radius: 4px; font-weight: 600; color: #1e40af; border: 1px solid #dbeafe;">
                                        @v.Placa
                                    </span>
                                </td>

                                <!-- Marca -->
                                <td style="padding: 16px; vertical-align: middle; color: #4b5563;">
                                    @if (!string.IsNullOrEmpty(v.Marca))
                                    {
                                        @v.Marca
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>

                                <!-- Modelo -->
                                <td style="padding: 16px; vertical-align: middle; color: #4b5563;">
                                    @if (!string.IsNullOrEmpty(v.Modelo))
                                    {
                                        @v.Modelo
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>

                                <!-- Color -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="display: flex; align-items: center; gap: 8px;">
                                        <div style="width: 16px; height: 16px; border-radius: 50%; background: #ccc; border: 1px solid #ddd;"></div>
                                        <span style="color: #4b5563;">@v.Color</span>
                                    </div>
                                </td>

                                <!-- Asociado a -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    @if (residenteAsociado != null)
                                    {
                                        <div style="display: flex; align-items: center; gap: 10px;">
                                            <div style="background: #dbeafe; color: #1d4ed8; width: 36px; height: 36px; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                                <i class="bi bi-house"></i>
                                            </div>
                                            <div>
                                                <div style="font-weight: 600; color: #1f2937;">@residenteAsociado.Usuario?.Nombre</div>
                                                <div style="font-size: 13px; color: #6b7280;">@residenteAsociado.Unidad</div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af;">-</span>
                                    }
                                </td>

                                <!-- Lista Negra -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    @if (enLista)
                                    {
                                        <span style="background: #fee2e2; color: #991b1b; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                            <i class="bi bi-ban"></i> En Lista Negra
                                        </span>
                                    }
                                    else
                                    {
                                        <span style="background: #d1fae5; color: #065f46; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                            <i class="bi bi-check-circle"></i> Permítido
                                        </span>
                                    }
                                </td>

                                <!-- Acciones -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="display: flex; flex-direction: column; gap: 8px;">
                                        <!-- Botón Editar -->
                                        <button type="button" onclick="mostrarEditor(@v.Id)"
                                                style="background: linear-gradient(135deg, #f59e0b, #d97706); color: white; border: none; padding: 8px 12px; border-radius: 6px; font-weight: 500; cursor: pointer; display: flex; align-items: center; gap: 6px; width: 100%; justify-content: center; transition: all 0.2s;">
                                            <i class="bi bi-pencil"></i> Editar
                                        </button>

                                        <!-- Botón Eliminar -->
                                        <form method="post" action="/Admin/EliminarVehiculo" style="margin: 0;"
                                              onsubmit="return confirm('¿Estás seguro de eliminar el vehículo @v.Placa? Esta acción no se puede deshacer.');">
                                            <input type="hidden" name="id" value="@v.Id" />
                                            <button type="submit"
                                                    style="background: linear-gradient(135deg, #ef4444, #dc2626); color: white; border: none; padding: 8px 12px; border-radius: 6px; font-weight: 500; cursor: pointer; display: flex; align-items: center; gap: 6px; width: 100%; justify-content: center; transition: all 0.2s;">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>

                            <!-- Editor oculto -->
                            <tr id="editor_@v.Id" style="display:none; background: #f8fafc; border-bottom: 2px solid #e5e7eb;">
                                <td colspan="7" style="padding: 25px;">
                                    <div style="background: white; border: 1px solid #e5e7eb; border-radius: 8px; padding: 20px; box-shadow: 0 2px 6px rgba(0,0,0,0.05);">
                                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                                            <h4 style="margin: 0; color: #4b5563; display: flex; align-items: center; gap: 10px;">
                                                <i class="bi bi-pencil-square"></i> Editar Vehículo @v.Placa
                                            </h4>
                                            <button type="button" onclick="ocultarEditor(@v.Id)"
                                                    style="background: #f3f4f6; color: #6b7280; border: 1px solid #d1d5db; padding: 6px 12px; border-radius: 6px; cursor: pointer; display: flex; align-items: center; gap: 6px;">
                                                <i class="bi bi-x"></i> Cerrar
                                            </button>
                                        </div>

                                        <form method="post" action="/Admin/EditarVehiculo">
                                            <input type="hidden" name="id" value="@v.Id" />
                                            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 20px;">
                                                <!-- Marca -->
                                                <div>
                                                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">Marca</label>
                                                    <input type="text" name="marca" value="@v.Marca"
                                                           style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px;" />
                                                </div>

                                                <!-- Modelo -->
                                                <div>
                                                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">Modelo</label>
                                                    <input type="text" name="modelo" value="@v.Modelo"
                                                           style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px;" />
                                                </div>

                                                <!-- Color -->
                                                <div>
                                                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">Color</label>
                                                    <input type="text" name="color" value="@v.Color"
                                                           style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px;" />
                                                </div>

                                                <!-- Residente -->
                                                <div>
                                                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151;">Residente *</label>
                                                    <select name="residenteId"
                                                            style="width: 100%; padding: 12px; border: 1px solid #d1d5db; border-radius: 6px;"
                                                            required>
                                                        <option value="">-- Seleccionar residente --</option>
                                                        @foreach (var re in listaRes)
                                                        {
                                                            <option value="@re.Id">@re.Unidad - @re.Usuario?.Nombre</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>

                                            <div style="display: flex; justify-content: flex-end; gap: 12px;">
                                                <button type="button" onclick="ocultarEditor(@v.Id)"
                                                        style="background: #f3f4f6; color: #6b7280; border: 1px solid #d1d5db; padding: 10px 20px; border-radius: 6px; font-weight: 500; cursor: pointer; display: flex; align-items: center; gap: 8px;">
                                                    <i class="bi bi-x-circle"></i> Cancelar
                                                </button>
                                                <button type="submit"
                                                        style="background: linear-gradient(135deg, #3b82f6, #2563eb); color: white; border: none; padding: 10px 20px; border-radius: 6px; font-weight: 500; cursor: pointer; display: flex; align-items: center; gap: 8px;">
                                                    <i class="bi bi-check-circle"></i> Guardar Cambios
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- ============================================= -->
    <!-- SECCIÓN 3: OTROS VEHÍCULOS (NO RESIDENTES) -->
    <!-- ============================================= -->
    <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
        <div style="background: #f8fafc; padding: 18px 24px; border-bottom: 1px solid #e5e7eb; display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h3 style="margin: 0; display: flex; align-items: center; gap: 10px; color: #4b5563;">
                    <i class="bi bi-car-front"></i> Otros Vehículos en el Sistema
                </h3>
                <p style="margin: 5px 0 0 0; color: #6b7280; font-size: 0.95rem;">
                    Vehículos no asociados a residentes (visitantes, preaprobados, lista negra)
                </p>
            </div>
        </div>

        @{
            int contadorOtros = 0;
            foreach (var v in Model)
            {
                var esResidente = v.VehiculosResidentes != null && v.VehiculosResidentes.Any();
                if (!esResidente) { contadorOtros++; }
            }
        }

        @if (contadorOtros == 0)
        {
            <div style="padding: 60px 20px; text-align: center;">
                <i class="bi bi-car-front" style="font-size: 48px; color: #9ca3af; margin-bottom: 15px;"></i>
                <p style="color: #6b7280; font-size: 1.1rem; margin-bottom: 10px;">No hay otros vehículos registrados</p>
                <p style="color: #9ca3af;">Todos los vehículos están asociados a residentes</p>
            </div>
        }
        else
        {
            <!-- Tabla -->
            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead style="background: #f1f5f9;">
                        <tr>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Placa</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Marca</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Modelo</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Color</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Tipo</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: #475569; border-bottom: 1px solid #e2e8f0; white-space: nowrap;">Detalles</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in Model)
                        {
                            var esResidente = v.VehiculosResidentes != null && v.VehiculosResidentes.Any();
                            if (esResidente) { continue; }

                            // Determinar el tipo REAL del vehículo
                            string tipoVehiculo = "Sin asignar";
                            string tipoColor = "#6b7280";
                            string tipoBgColor = "#f3f4f6";
                            string detalles = "";

                            // 1. Verificar si está en lista negra
                            if (v.VehiculosListaNegras != null && v.VehiculosListaNegras.Any())
                            {
                                tipoVehiculo = "Lista Negra";
                                tipoColor = "#991b1b";
                                tipoBgColor = "#fee2e2";
                                detalles = "Acceso bloqueado";
                            }
                            // 2. Verificar si está preaprobado
                            else if (v.VehiculosPreaprobados != null && v.VehiculosPreaprobados.Any())
                            {
                                tipoVehiculo = "Preaprobado";
                                tipoColor = "#065f46";
                                tipoBgColor = "#d1fae5";
                                var preaprobado = v.VehiculosPreaprobados.FirstOrDefault();
                                if (preaprobado != null)
                                {
                                    var fechaInicio = preaprobado.FechaInicio?.ToString("dd/MM/yy") ?? "-";
                                    var fechaFin = preaprobado.FechaFin?.ToString("dd/MM/yy") ?? "-";
                                    var estado = preaprobado.Activo == true ? "Activo" : "Inactivo";

                                    detalles = $"Para: {preaprobado.Residente?.Unidad ?? "-"}";
                                    detalles += $" | {fechaInicio} al {fechaFin}";
                                    detalles += $" | {estado}";
                                }
                            }
                            // 3. Verificar si es de visitante
                            else if (v.VehiculosVisitantes != null && v.VehiculosVisitantes.Any())
                            {
                                tipoVehiculo = "Visitante";
                                tipoColor = "#92400e";
                                tipoBgColor = "#fef3c7";
                                var vehiculoVisitante = v.VehiculosVisitantes.FirstOrDefault();
                                if (vehiculoVisitante?.Visitante != null)
                                {
                                    detalles = $"Visitante: {vehiculoVisitante.Visitante.Nombre}";
                                }
                            }
                            // 4. Si no tiene ninguna relación
                            else
                            {
                                tipoVehiculo = "Sin asignar";
                                tipoColor = "#6b7280";
                                tipoBgColor = "#f3f4f6";
                                detalles = "No asociado";
                            }

                            <tr style="border-bottom: 1px solid #e5e7eb; transition: background 0.2s;">
                                <!-- Placa -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <span style="background: #f1f5f9; font-family: monospace; padding: 6px 10px; border-radius: 4px; font-weight: 500; color: #4b5563; border: 1px solid #e5e7eb;">
                                        @v.Placa
                                    </span>
                                </td>

                                <!-- Marca -->
                                <td style="padding: 16px; vertical-align: middle; color: #4b5563;">
                                    @if (!string.IsNullOrEmpty(v.Marca))
                                    {
                                        @v.Marca
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>

                                <!-- Modelo -->
                                <td style="padding: 16px; vertical-align: middle; color: #4b5563;">
                                    @if (!string.IsNullOrEmpty(v.Modelo))
                                    {
                                        @v.Modelo
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>

                                <!-- Color -->
                                <td style="padding: 16px; vertical-align: middle; color: #4b5563;">
                                    @if (!string.IsNullOrEmpty(v.Color))
                                    {
                                        @v.Color
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>

                                <!-- Tipo -->
                                <td style="padding: 16px; vertical-align: middle;">
                                    <span style="background: @tipoBgColor; color: @tipoColor; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                        @if (tipoVehiculo == "Lista Negra")
                                        {
                                            <i class="bi bi-ban"></i>
                                        }
                                        else if (tipoVehiculo == "Preaprobado")
                                        {

                                            <i class="bi bi-check-circle"></i>
                                        }
                                        else if (tipoVehiculo == "Visitante")
                                        {

                                            <i class="bi bi-person"></i>
                                        }
                                        else
                                        {

                                            <i class="bi bi-question-circle"></i>
                                        }
                                        @tipoVehiculo
                                    </span>
                                </td>

                                <!-- Detalles -->
                                <td style="padding: 16px; vertical-align: middle; color: #6b7280; font-size: 14px; max-width: 300px;">
                                    @detalles
                                </td>
                            </tr>
                        }

                        <!-- Pie de tabla -->
                        <tr style="background: #f8fafc;">
                            <td colspan="6" style="padding: 12px 16px; color: #6b7280; font-size: 14px;">
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <i class="bi bi-info-circle"></i>
                                    <span>Mostrando @contadorOtros vehículo(s) que no son de residentes</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

