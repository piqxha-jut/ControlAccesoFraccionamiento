@{
    ViewBag.Title = "Panel de Administración";
    Layout = "_Layout"; /* Asegura que use el layout con navbar */
}

<div style="max-width: 1200px; margin: 0 auto; padding: 25px 15px;">
    <!-- Encabezado mejorado -->
    <div style="background: linear-gradient(135deg, #7c3aed, #6d28d9); color: white; padding: 25px; border-radius: 12px; margin-bottom: 30px; box-shadow: 0 6px 15px rgba(124, 58, 237, 0.2);">
        <h2 style="margin: 0; display: flex; align-items: center; gap: 12px; font-size: 1.8rem;">
            <i class="bi bi-speedometer2"></i> Panel de Administración
        </h2>
        <p style="margin: 10px 0 0 0; font-size: 1.1rem; opacity: 0.9;">
            Bienvenido, <strong style="font-weight: 600;">@ViewBag.Nombre</strong>
        </p>
    </div>

    <!-- Resumen General en tarjetas -->
    <h3 style="color: #4b5563; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 2px solid #e5e7eb;">
        <i class="bi bi-graph-up" style="margin-right: 10px;"></i>Resumen General del Sistema
    </h3>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 40px;">
        <!-- Tarjeta Residentes -->
        <div style="background: white; border-left: 4px solid #8b5cf6; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Residentes</div>
                    <div style="font-size: 32px; font-weight: 700; color: #7c3aed; margin: 5px 0;">@ViewBag.TotalResidentes</div>
                </div>
                <i class="bi bi-people-fill" style="font-size: 32px; color: #a78bfa; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Tarjeta Visitantes -->
        <div style="background: white; border-left: 4px solid #10b981; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Visitantes</div>
                    <div style="font-size: 32px; font-weight: 700; color: #059669; margin: 5px 0;">@ViewBag.TotalVisitantes</div>
                </div>
                <i class="bi bi-person-badge" style="font-size: 32px; color: #34d399; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Tarjeta Vehículos -->
        <div style="background: white; border-left: 4px solid #3b82f6; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Vehículos</div>
                    <div style="font-size: 32px; font-weight: 700; color: #2563eb; margin: 5px 0;">@ViewBag.TotalVehiculos</div>
                </div>
                <i class="bi bi-car-front-fill" style="font-size: 32px; color: #60a5fa; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Tarjeta Accesos Hoy -->
        <div style="background: white; border-left: 4px solid #f59e0b; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Accesos Hoy</div>
                    <div style="font-size: 32px; font-weight: 700; color: #d97706; margin: 5px 0;">@ViewBag.AccesosHoy</div>
                </div>
                <i class="bi bi-door-open-fill" style="font-size: 32px; color: #fbbf24; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Tarjeta Pendientes -->
        <div style="background: white; border-left: 4px solid #f97316; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Pendientes Hoy</div>
                    <div style="font-size: 32px; font-weight: 700; color: #ea580c; margin: 5px 0;">@ViewBag.PendientesHoy</div>
                </div>
                <i class="bi bi-clock-history" style="font-size: 32px; color: #fb923c; opacity: 0.7;"></i>
            </div>
        </div>

        <!-- Tarjeta Incidentes -->
        <div style="background: white; border-left: 4px solid #ef4444; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Incidentes Hoy</div>
                    <div style="font-size: 32px; font-weight: 700; color: #dc2626; margin: 5px 0;">@ViewBag.IncidentesHoy</div>
                </div>
                <i class="bi bi-exclamation-triangle-fill" style="font-size: 32px; color: #f87171; opacity: 0.7;"></i>
            </div>
        </div>
    </div>

    <!-- Módulos de Administración -->
    <h3 style="color: #4b5563; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 2px solid #e5e7eb;">
        <i class="bi bi-tools" style="margin-right: 10px;"></i>Módulos de Administración
    </h3>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 16px;">
        <!-- Gestión de Usuarios -->
        <a href="/Admin/Usuarios" style="background: white; border: 1px solid #e5e7eb; padding: 20px; text-decoration: none; color: #1f2937; border-radius: 10px; display: flex; align-items: center; gap: 15px; transition: all 0.3s; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);">
            <div style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                <i class="bi bi-people-fill"></i>
            </div>
            <div>
                <div style="font-weight: 600; margin-bottom: 4px; font-size: 1rem;">Gestión de Usuarios</div>
                <div style="font-size: 13px; color: #6b7280;">Administrar usuarios del sistema</div>
            </div>
            <i class="bi bi-chevron-right" style="margin-left: auto; color: #9ca3af;"></i>
        </a>

        <!-- Gestión de Residentes -->
        <a href="/Admin/Residentes" style="background: white; border: 1px solid #e5e7eb; padding: 20px; text-decoration: none; color: #1f2937; border-radius: 10px; display: flex; align-items: center; gap: 15px; transition: all 0.3s; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);">
            <div style="background: linear-gradient(135deg, #10b981, #059669); color: white; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                <i class="bi bi-house-door-fill"></i>
            </div>
            <div>
                <div style="font-weight: 600; margin-bottom: 4px; font-size: 1rem;">Gestión de Residentes</div>
                <div style="font-size: 13px; color: #6b7280;">Administrar residentes y viviendas</div>
            </div>
            <i class="bi bi-chevron-right" style="margin-left: auto; color: #9ca3af;"></i>
        </a>

        <!-- Gestión de Vehículos -->
        <a href="/Admin/Vehiculos" style="background: white; border: 1px solid #e5e7eb; padding: 20px; text-decoration: none; color: #1f2937; border-radius: 10px; display: flex; align-items: center; gap: 15px; transition: all 0.3s; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);">
            <div style="background: linear-gradient(135deg, #3b82f6, #2563eb); color: white; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                <i class="bi bi-car-front-fill"></i>
            </div>
            <div>
                <div style="font-weight: 600; margin-bottom: 4px; font-size: 1rem;">Gestión de Vehículos</div>
                <div style="font-size: 13px; color: #6b7280;">Administrar vehículos registrados</div>
            </div>
            <i class="bi bi-chevron-right" style="margin-left: auto; color: #9ca3af;"></i>
        </a>

        <!-- Lista Negra -->
        <a href="/Admin/ListaNegra" style="background: white; border: 1px solid #e5e7eb; padding: 20px; text-decoration: none; color: #1f2937; border-radius: 10px; display: flex; align-items: center; gap: 15px; transition: all 0.3s; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);">
            <div style="background: linear-gradient(135deg, #ef4444, #dc2626); color: white; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                <i class="bi bi-ban-fill"></i>
            </div>
            <div>
                <div style="font-weight: 600; margin-bottom: 4px; font-size: 1rem;">Lista Negra</div>
                <div style="font-size: 13px; color: #6b7280;">Gestionar acceso denegado</div>
            </div>
            <i class="bi bi-chevron-right" style="margin-left: auto; color: #9ca3af;"></i>
        </a>

        <!-- Visitantes Preaprobados -->
        <a href="/Admin/Preaprobados" style="background: white; border: 1px solid #e5e7eb; padding: 20px; text-decoration: none; color: #1f2937; border-radius: 10px; display: flex; align-items: center; gap: 15px; transition: all 0.3s; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);">
            <div style="background: linear-gradient(135deg, #f59e0b, #d97706); color: white; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div>
                <div style="font-weight: 600; margin-bottom: 4px; font-size: 1rem;">Visitantes Preaprobados</div>
                <div style="font-size: 13px; color: #6b7280;">Gestionar acceso permitido</div>
            </div>
            <i class="bi bi-chevron-right" style="margin-left: auto; color: #9ca3af;"></i>
        </a>

        <!-- Reportes y Estadísticas -->
        <a href="/Admin/Reportes" style="background: white; border: 1px solid #e5e7eb; padding: 20px; text-decoration: none; color: #1f2937; border-radius: 10px; display: flex; align-items: center; gap: 15px; transition: all 0.3s; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);">
            <div style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                <i class="bi bi-graph-up"></i>
            </div>
            <div>
                <div style="font-weight: 600; margin-bottom: 4px; font-size: 1rem;">Reportes y Estadísticas</div>
                <div style="font-size: 13px; color: #6b7280;">Análisis y reportes del sistema</div>
            </div>
            <i class="bi bi-chevron-right" style="margin-left: auto; color: #9ca3af;"></i>
        </a>

        <!-- Incidentes -->
        <a href="/Admin/Incidentes" style="background: white; border: 1px solid #e5e7eb; padding: 20px; text-decoration: none; color: #1f2937; border-radius: 10px; display: flex; align-items: center; gap: 15px; transition: all 0.3s; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);">
            <div style="background: linear-gradient(135deg, #f97316, #ea580c); color: white; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>
            <div>
                <div style="font-weight: 600; margin-bottom: 4px; font-size: 1rem;">Incidentes</div>
                <div style="font-size: 13px; color: #6b7280;">Revisar incidentes de acceso</div>
            </div>
            <i class="bi bi-chevron-right" style="margin-left: auto; color: #9ca3af;"></i>
        </a>

        <!-- Historial Completo -->
        <a href="/Admin/Historial" style="background: white; border: 1px solid #e5e7eb; padding: 20px; text-decoration: none; color: #1f2937; border-radius: 10px; display: flex; align-items: center; gap: 15px; transition: all 0.3s; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);">
            <div style="background: linear-gradient(135deg, #6b7280, #4b5563); color: white; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                <i class="bi bi-clock-history"></i>
            </div>
            <div>
                <div style="font-weight: 600; margin-bottom: 4px; font-size: 1rem;">Historial Completo</div>
                <div style="font-size: 13px; color: #6b7280;">Registro histórico de accesos</div>
            </div>
            <i class="bi bi-chevron-right" style="margin-left: auto; color: #9ca3af;"></i>
        </a>
    </div>

    <!-- Información del sistema -->
    <div style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #e5e7eb; text-align: center;">
        <div style="color: #6b7280; margin-bottom: 8px; display: flex; align-items: center; justify-content: center; gap: 10px;">
            <i class="bi bi-calendar-event"></i>
            <span>Fecha del sistema: <strong>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</strong></span>
        </div>
        <div style="color: #9ca3af; font-size: 14px; margin-top: 10px;">
            <i class="bi bi-shield-check"></i> Sistema de Control de Acceso - Panel Administrativo
        </div>
    </div>
</div>

<!-- Efecto hover para módulos -->
<style>
    /* Efecto al pasar el mouse sobre los módulos */
    a[href*="/Admin/"]:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08) !important;
        border-color: #d1d5db !important;
        text-decoration: none;
    }

    /* Responsive para móviles */
    @@media (max-width: 768px) {
        div[style*="grid-template-columns"] {
            grid-template-columns: 1fr !important;
            gap: 15px !important;
        }

        div[style*="padding: 20px;"] {
            padding: 16px !important;
        }
    }
</style>