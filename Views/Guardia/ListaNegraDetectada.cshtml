@{
    ViewBag.Title = "Vehículo en Lista Negra";
    Layout = "_Layout";
}

<div style="max-width: 800px; margin: 0 auto; padding: 25px 15px;">
    <!-- Encabezado impactante -->
    <div style="background: linear-gradient(135deg, #7f1d1d, #450a0a); color: white; padding: 30px; border-radius: 12px; margin-bottom: 25px; box-shadow: 0 4px 12px rgba(127, 29, 29, 0.3); position: relative; overflow: hidden;">
        <!-- Patrón de fondo sutil -->
        <div style="position: absolute; top: 0; right: 0; bottom: 0; left: 0; background-image: radial-gradient(circle at 20% 80%, rgba(239, 68, 68, 0.1) 0%, transparent 20%), radial-gradient(circle at 80% 20%, rgba(220, 38, 38, 0.1) 0%, transparent 20%);"></div>

        <div style="position: relative; z-index: 1; text-align: center;">
            <div style="font-size: 60px; margin-bottom: 20px; color: #fca5a5;">
                <i class="bi bi-shield-slash"></i>
            </div>
            <h2 style="margin: 0; font-size: 2.2rem; font-weight: 700; letter-spacing: 1px; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">
                ⚠ VEHÍCULO BLOQUEADO ⚠
            </h2>
            <p style="margin: 12px 0 0 0; opacity: 0.9; font-size: 1.1rem; max-width: 600px; margin-left: auto; margin-right: auto;">
                Acceso restringido inmediatamente - Vehículo detectado en lista negra
            </p>
        </div>
    </div>

    <!-- Contenido principal -->
    <div style="background: linear-gradient(135deg, #fee2e2, #fecaca); border: 2px solid #ef4444; border-radius: 12px; overflow: hidden; margin-bottom: 30px; box-shadow: 0 4px 12px rgba(239, 68, 68, 0.15);">
        <!-- Sección de alerta -->
        <div style="background: linear-gradient(135deg, #ef4444, #dc2626); color: white; padding: 20px 25px;">
            <div style="display: flex; align-items: center; gap: 15px;">
                <div style="background: rgba(255, 255, 255, 0.2); width: 50px; height: 50px; border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <div>
                    <h3 style="margin: 0; font-size: 1.5rem; font-weight: 600;">ALERTA DE SEGURIDAD</h3>
                    <p style="margin: 5px 0 0 0; opacity: 0.9; font-size: 1rem;">Vehículo identificado en lista negra del sistema</p>
                </div>
            </div>
        </div>

        <!-- Cuerpo del mensaje -->
        <div style="padding: 30px;">
            <!-- Mensaje de alerta -->
            @if (TempData["Alerta"] != null)
            {
                <div style="background: #7f1d1d; color: #fca5a5; padding: 20px; border-radius: 8px; border-left: 6px solid #fca5a5; margin-bottom: 25px;">
                    <div style="display: flex; align-items: flex-start; gap: 15px;">
                        <div style="font-size: 1.8rem; line-height: 1;">
                            <i class="bi bi-megaphone"></i>
                        </div>
                        <div style="flex: 1;">
                            <div style="font-weight: 700; font-size: 1.2rem; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 0.5px;">
                                ACCIÓN REQUERIDA
                            </div>
                            <div style="font-size: 1.1rem; line-height: 1.5;">
                                @TempData["Alerta"]
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Instrucciones de acción -->
            <div style="background: white; border: 1px solid #fca5a5; border-radius: 8px; padding: 25px; margin-bottom: 25px;">
                <h4 style="margin: 0 0 15px 0; color: #7f1d1d; display: flex; align-items: center; gap: 10px;">
                    <i class="bi bi-list-check"></i> Procedimiento a seguir
                </h4>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
                    <div style="display: flex; align-items: flex-start; gap: 12px;">
                        <div style="background: #fee2e2; color: #dc2626; min-width: 36px; height: 36px; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                            <span style="font-weight: 700; font-size: 1.1rem;">1</span>
                        </div>
                        <div>
                            <div style="font-weight: 600; color: #1f2937; margin-bottom: 4px;">NO PERMITIR EL ACCESO</div>
                            <div style="font-size: 14px; color: #6b7280;">Bloquea inmediatamente el ingreso del vehículo</div>
                        </div>
                    </div>

                    <div style="display: flex; align-items: flex-start; gap: 12px;">
                        <div style="background: #fee2e2; color: #dc2626; min-width: 36px; height: 36px; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                            <span style="font-weight: 700; font-size: 1.1rem;">2</span>
                        </div>
                        <div>
                            <div style="font-weight: 600; color: #1f2937; margin-bottom: 4px;">MANTENER LA CALMA</div>
                            <div style="font-size: 14px; color: #6b7280;">Actúa con profesionalismo y firmeza</div>
                        </div>
                    </div>

                    <div style="display: flex; align-items: flex-start; gap: 12px;">
                        <div style="background: #fee2e2; color: #dc2626; min-width: 36px; height: 36px; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                            <span style="font-weight: 700; font-size: 1.1rem;">3</span>
                        </div>
                        <div>
                            <div style="font-weight: 600; color: #1f2937; margin-bottom: 4px;">REGISTRAR EL INCIDENTE</div>
                            <div style="font-size: 14px; color: #6b7280;">Reporta el intento de acceso en el sistema</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información de contacto de emergencia -->
            <div style="background: linear-gradient(135deg, #1f2937, #111827); color: white; border-radius: 8px; padding: 20px; margin-bottom: 25px;">
                <h4 style="margin: 0 0 15px 0; color: #fca5a5; display: flex; align-items: center; gap: 10px;">
                    <i class="bi bi-telephone"></i> Contactos de emergencia
                </h4>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                    <div style="text-align: center;">
                        <div style="font-size: 12px; color: #9ca3af; margin-bottom: 5px;">SUPERVISOR</div>
                        <div style="font-weight: 600; font-size: 1.1rem;">📞 (555) 123-4567</div>
                    </div>
                    <div style="text-align: center;">
                        <div style="font-size: 12px; color: #9ca3af; margin-bottom: 5px;">SEGURIDAD</div>
                        <div style="font-weight: 600; font-size: 1.1rem;">🚔 (555) 987-6543</div>
                    </div>
                    <div style="text-align: center;">
                        <div style="font-size: 12px; color: #9ca3af; margin-bottom: 5px;">ADMINISTRADOR</div>
                        <div style="font-weight: 600; font-size: 1.1rem;">👨‍💼 (555) 456-7890</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Botón de acción -->
    <div style="text-align: center; margin-top: 40px;">
        <a href="/Guardia/Index"
           style="background: linear-gradient(135deg, #374151, #1f2937); color: white; padding: 14px 32px; border-radius: 8px; text-decoration: none; display: inline-flex; align-items: center; gap: 10px; font-weight: 600; font-size: 1.1rem; border: 2px solid #4b5563; transition: all 0.2s;">
            <i class="bi bi-arrow-left-circle"></i> Regresar al Panel del Guardia
        </a>

        <div style="margin-top: 20px;">
            <a href="/Guardia/ReportarIncidente"
               style="background: linear-gradient(135deg, #ef4444, #dc2626); color: white; padding: 12px 24px; border-radius: 6px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; font-weight: 500; border: 1px solid #fca5a5; transition: all 0.2s;">
                <i class="bi bi-exclamation-octagon"></i> Reportar este incidente
            </a>
        </div>
    </div>

    <!-- Información legal -->
    <div style="background: #f8fafc; border: 1px solid #e5e7eb; border-radius: 8px; padding: 20px; margin-top: 40px; text-align: center; color: #6b7280; font-size: 14px;">
        <div style="display: flex; align-items: center; justify-content: center; gap: 10px; margin-bottom: 10px;">
            <i class="bi bi-shield-lock"></i>
            <span style="font-weight: 600; color: #4b5563;">Procedimiento de seguridad activado</span>
        </div>
        <p style="margin: 0; line-height: 1.5;">
            Este mensaje se genera automáticamente cuando el sistema detecta un vehículo en la lista negra.
            Todas las acciones han sido registradas en el sistema de seguridad.
        </p>
    </div>
</div>

<style>
    /* Animación de pulso para el icono principal */
    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    /* Aplicar animación al icono */
    .bi-shield-slash {
        animation: pulse 2s infinite;
    }

    /* Efectos hover */
    a[href="/Guardia/Index"]:hover {
        background: linear-gradient(135deg, #4b5563, #374151) !important;
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2) !important;
        text-decoration: none;
    }

    a[href="/Guardia/ReportarIncidente"]:hover {
        background: linear-gradient(135deg, #dc2626, #b91c1c) !important;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(220, 38, 38, 0.3) !important;
        text-decoration: none;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        div[style*="max-width: 800px"] {
            padding: 15px 10px;
        }

        h2 {
            font-size: 1.8rem !important;
        }

        .encabezado-superior {
            padding: 20px !important;
        }

        div[style*="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr))"] {
            grid-template-columns: 1fr !important;
            gap: 15px !important;
        }

        div[style*="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))"] {
            grid-template-columns: 1fr !important;
            gap: 15px !important;
        }

        .action-buttons {
            flex-direction: column;
            gap: 15px;
        }

            .action-buttons a {
                width: 100%;
                justify-content: center;
            }
    }

    @@media (max-width: 480px) {
        .header-icon {
            font-size: 48px !important;
        }

        .alert-section {
            flex-direction: column;
            text-align: center;
            gap: 15px !important;
        }

        .contact-grid {
            grid-template-columns: 1fr !important;
        }
    }
</style>

<script>
    // Efecto de alerta sutil al cargar la página
    document.addEventListener('DOMContentLoaded', function() {
        // Agregar clase para animación de alerta
        const header = document.querySelector('div[style*="background: linear-gradient(135deg, #7f1d1d, #450a0a)"]');
        if (header) {
            header.style.animation = 'pulse 3s ease-in-out';
        }
    });
</script>