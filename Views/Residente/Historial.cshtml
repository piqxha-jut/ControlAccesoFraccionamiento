@model List<ControlAccesoFraccionamiento.Models.RegistrosAcceso>
@{
    ViewData["Title"] = "Historial de Visitas";
    Layout = "_Layout";
}

<div style="max-width: 1400px; margin: 0 auto; padding: 25px 15px;">
    <!-- Encabezado -->
    <div style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; padding: 25px; border-radius: 12px; margin-bottom: 30px; box-shadow: 0 6px 15px rgba(139, 92, 246, 0.2);">
        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
            <div>
                <h2 style="margin: 0; display: flex; align-items: center; gap: 12px; font-size: 1.8rem;">
                    <i class="bi bi-clock-history"></i> Historial de Visitas a mi Vivienda
                </h2>
                <p style="margin: 10px 0 0 0; font-size: 1.1rem; opacity: 0.9;">
                    Registro completo de todas las visitas que han solicitado acceso a tu unidad
                </p>
            </div>
            <a href="/Residente/Index"
               style="background: rgba(255, 255, 255, 0.1); color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; font-weight: 500; border: 1px solid rgba(255, 255, 255, 0.2); transition: all 0.2s;">
                <i class="bi bi-arrow-left"></i> Volver al Dashboard
            </a>
        </div>
    </div>

    <!-- Estadísticas rápidas -->
    @if (Model != null && Model.Count > 0)
    {
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
            <div style="background: white; border-left: 4px solid #8b5cf6; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
                <div style="display: flex; align-items: center; gap: 15px;">
                    <div style="background: #f3e8ff; color: #7c3aed; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 22px;">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #6b7280; text-transform: uppercase;">Total de visitas</div>
                        <div style="font-size: 28px; font-weight: 700; color: #1f2937;">@Model.Count</div>
                    </div>
                </div>
            </div>

            @{
                var aprobadas = Model.Count(v => v.EstadoAutorizacion == "aprobado");
                var rechazadas = Model.Count(v => v.EstadoAutorizacion == "rechazado");
                var pendientes = Model.Count(v => v.EstadoAutorizacion == "pendiente");
                var dentro = Model.Count(v => v.EstadoAcceso == "dentro");
            }

            <div style="background: white; border-left: 4px solid #10b981; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
                <div style="display: flex; align-items: center; gap: 15px;">
                    <div style="background: #d1fae5; color: #059669; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 22px;">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #6b7280; text-transform: uppercase;">Aprobadas</div>
                        <div style="font-size: 28px; font-weight: 700; color: #065f46;">@aprobadas</div>
                    </div>
                </div>
            </div>

            <div style="background: white; border-left: 4px solid #ef4444; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
                <div style="display: flex; align-items: center; gap: 15px;">
                    <div style="background: #fee2e2; color: #dc2626; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 22px;">
                        <i class="bi bi-x-circle"></i>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #6b7280; text-transform: uppercase;">Rechazadas</div>
                        <div style="font-size: 28px; font-weight: 700; color: #991b1b;">@rechazadas</div>
                    </div>
                </div>
            </div>

            <div style="background: white; border-left: 4px solid #f59e0b; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
                <div style="display: flex; align-items: center; gap: 15px;">
                    <div style="background: #fef3c7; color: #d97706; width: 50px; height: 50px; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 22px;">
                        <i class="bi bi-clock"></i>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #6b7280; text-transform: uppercase;">Dentro</div>
                        <div style="font-size: 28px; font-weight: 700; color: #92400e;">@dentro</div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Contenido principal -->
    @if (Model != null && Model.Count > 0)
    {
        <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin-bottom: 40px;">
            <div style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; padding: 18px 24px; display: flex; justify-content: space-between; align-items: center;">
                <h3 style="margin: 0; display: flex; align-items: center; gap: 10px;">
                    <i class="bi bi-table"></i> Registro de Visitas
                </h3>
                <span style="background: rgba(255, 255, 255, 0.2); padding: 6px 14px; border-radius: 20px; font-weight: 600; display: flex; align-items: center; gap: 8px;">
                    <i class="bi bi-eye"></i> @Model.Count registros
                </span>
            </div>

            <div style="overflow-x: auto; padding: 0 20px 20px;">
                <table class="table table-hover" style="margin-bottom: 0;">
                    <thead style="background: #f5f3ff;">
                        <tr>
                            <th style="padding: 16px; font-weight: 600; color: #5b21b6; border-bottom: 1px solid #ddd6fe;">Fecha/Hora Entrada</th>
                            <th style="padding: 16px; font-weight: 600; color: #5b21b6; border-bottom: 1px solid #ddd6fe;">Fecha/Hora Salida</th>
                            <th style="padding: 16px; font-weight: 600; color: #5b21b6; border-bottom: 1px solid #ddd6fe;">Tiempo Estancia</th>
                            <th style="padding: 16px; font-weight: 600; color: #5b21b6; border-bottom: 1px solid #ddd6fe;">Visitante</th>
                            <th style="padding: 16px; font-weight: 600; color: #5b21b6; border-bottom: 1px solid #ddd6fe;">Vehículo</th>
                            <th style="padding: 16px; font-weight: 600; color: #5b21b6; border-bottom: 1px solid #ddd6fe;">Placa</th>
                            <th style="padding: 16px; font-weight: 600; color: #5b21b6; border-bottom: 1px solid #ddd6fe;">Motivo</th>
                            <th style="padding: 16px; font-weight: 600; color: #5b21b6; border-bottom: 1px solid #ddd6fe;">Autorización</th>
                            <th style="padding: 16px; font-weight: 600; color: #5b21b6; border-bottom: 1px solid #ddd6fe;">Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var visita in Model)
                        {
                            <tr style="border-bottom: 1px solid #e5e7eb;">
                                <td style="padding: 16px; vertical-align: middle;">
                                    @if (visita.FechaEntrada.HasValue)
                                    {
                                        <div style="display: flex; align-items: center; gap: 8px;">
                                            <i class="bi bi-calendar2-check" style="color: #059669;"></i>
                                            <div>
                                                <div style="font-weight: 500; color: #1f2937;">@visita.FechaEntrada.Value.ToString("dd/MM/yyyy")</div>
                                                <div style="font-size: 13px; color: #6b7280;">@visita.FechaEntrada.Value.ToString("HH:mm")</div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>
                                <td style="padding: 16px; vertical-align: middle;">
                                    @if (visita.FechaSalida.HasValue)
                                    {
                                        <div style="display: flex; align-items: center; gap: 8px;">
                                            <i class="bi bi-calendar2-x" style="color: #dc2626;"></i>
                                            <div>
                                                <div style="font-weight: 500; color: #1f2937;">@visita.FechaSalida.Value.ToString("dd/MM/yyyy")</div>
                                                <div style="font-size: 13px; color: #6b7280;">@visita.FechaSalida.Value.ToString("HH:mm")</div>
                                            </div>
                                        </div>
                                    }
                                    else if (visita.FechaEntrada.HasValue)
                                    {
                                        <span style="background: #dbeafe; color: #1e40af; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                            <i class="bi bi-house-check"></i> EN FRACCIONAMIENTO
                                        </span>
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>
                                <td style="padding: 16px; vertical-align: middle;">
                                    @if (visita.TiempoEstancia.HasValue && visita.TiempoEstancia > 0)
                                    {
                                        var horas = visita.TiempoEstancia / 60;
                                        var minutos = visita.TiempoEstancia % 60;
                                        <div style="display: flex; align-items: center; gap: 8px;">
                                            <i class="bi bi-clock-history" style="color: #8b5cf6;"></i>
                                            <span style="font-weight: 500; color: #1f2937;">@($"{horas}h {minutos}min")</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>
                                <td style="padding: 16px; vertical-align: middle;">
                                    <div style="font-weight: 500; color: #1f2937;">@visita.Visitante?.Nombre</div>
                                </td>
                                <td style="padding: 16px; vertical-align: middle; color: #4b5563;">
                                    @if (visita.Vehiculo != null)
                                    {
                                        @($"{visita.Vehiculo.Marca} {visita.Vehiculo.Modelo}")
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>
                                <td style="padding: 16px; vertical-align: middle;">
                                    @if (!string.IsNullOrEmpty(visita.Vehiculo?.Placa))
                                    {
                                        <span style="background: #f3f4f6; padding: 6px 12px; border-radius: 6px; font-family: monospace; font-weight: 600; font-size: 0.9rem;">
                                            @visita.Vehiculo?.Placa
                                        </span>
                                    }
                                    else
                                    {
                                        <span style="color: #9ca3af; font-style: italic;">-</span>
                                    }
                                </td>
                                <td style="padding: 16px; vertical-align: middle; color: #4b5563; max-width: 200px;">
                                    @visita.MotivoVisita
                                </td>
                                <td style="padding: 16px; vertical-align: middle;">
                                    @if (visita.EstadoAutorizacion == "aprobado")
                                    {
                                        <span style="background: #d1fae5; color: #065f46; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                            <i class="bi bi-check-circle"></i> APROBADO
                                        </span>
                                    }
                                    else if (visita.EstadoAutorizacion == "rechazado")
                                    {
                                        <span style="background: #fee2e2; color: #991b1b; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                            <i class="bi bi-x-circle"></i> RECHAZADO
                                        </span>
                                    }
                                    else if (visita.EstadoAutorizacion == "pendiente")
                                    {
                                        <span style="background: #fef3c7; color: #92400e; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                            <i class="bi bi-clock"></i> PENDIENTE
                                        </span>
                                    }
                                    else
                                    {
                                        <span style="background: #f3f4f6; color: #6b7280; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600;">
                                            @visita.EstadoAutorizacion?.ToUpper()
                                        </span>
                                    }
                                </td>
                                <td style="padding: 16px; vertical-align: middle;">
                                    @{
                                        // PRIMERO verificar si está RECHAZADO
                                        if (visita.EstadoAutorizacion == "rechazado")
                                        {
                                            <span style="background: #fee2e2; color: #991b1b; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                                <i class="bi bi-x-octagon"></i> DENEGADO
                                            </span>
                                            @if (visita.EstadoAcceso == "dentro")
                                            {
                                                <div style="font-size: 11px; color: #d97706; margin-top: 4px;">
                                                    <i class="bi bi-info-circle"></i> registro anterior
                                                </div>
                                            }
                                        }
                                        // LUEGO verificar los demás estados
                                        else if (visita.EstadoAcceso == "salio" || visita.FechaSalida.HasValue)
                                        {
                                            <span style="background: #f3f4f6; color: #6b7280; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                                <i class="bi bi-door-closed"></i> SALIÓ
                                            </span>
                                        }
                                        else if (visita.EstadoAcceso == "dentro")
                                        {
                                            <span style="background: #d1fae5; color: #065f46; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                                <i class="bi bi-house-check"></i> DENTRO
                                            </span>
                                        }
                                        else if (visita.EstadoAcceso == "denegado")
                                        {
                                            <span style="background: #fee2e2; color: #991b1b; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600; display: inline-flex; align-items: center; gap: 6px;">
                                                <i class="bi bi-shield-x"></i> DENEGADO
                                            </span>
                                        }
                                        else
                                        {
                                            <span style="background: #f3f4f6; color: #6b7280; padding: 6px 12px; border-radius: 20px; font-size: 13px; font-weight: 600;">
                                                @visita.EstadoAcceso?.ToUpper()
                                            </span>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); margin-bottom: 40px;">
            <div style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; padding: 20px;">
                <h3 style="margin: 0; display: flex; align-items: center; gap: 10px;">
                    <i class="bi bi-clock-history"></i> Historial de Visitas
                </h3>
            </div>

            <div style="padding: 60px 20px; text-align: center;">
                <i class="bi bi-person-x" style="font-size: 48px; color: #9ca3af; margin-bottom: 15px;"></i>
                <p style="color: #6b7280; font-size: 1.1rem; margin-bottom: 10px;">No hay visitas registradas en tu historial</p>
                <p style="color: #9ca3af;">Todavía no se han registrado visitas a tu unidad</p>
            </div>
        </div>
    }

    <!-- Información sobre el Historial -->
    <div style="background: #f8fafc; border: 1px solid #e5e7eb; border-radius: 10px; padding: 25px; margin-bottom: 30px;">
        <h4 style="color: #374151; margin-bottom: 20px; display: flex; align-items: center; gap: 10px;">
            <i class="bi bi-info-circle"></i> Información sobre el Historial
        </h4>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
            <div>
                <h5 style="color: #4b5563; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                    <i class="bi bi-circle-fill" style="color: #3b82f6; font-size: 0.8rem;"></i>
                    Estados de Acceso
                </h5>
                <div style="display: flex; flex-direction: column; gap: 10px;">
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <span style="background: #d1fae5; color: #065f46; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                            DENTRO
                        </span>
                        <span style="font-size: 14px; color: #6b7280;">Visitante actualmente en el fraccionamiento</span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <span style="background: #f3f4f6; color: #6b7280; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                            SALIÓ
                        </span>
                        <span style="font-size: 14px; color: #6b7280;">Visitante ya salió del fraccionamiento</span>
                    </div>
                </div>
            </div>

            <div>
                <h5 style="color: #4b5563; margin-bottom: 10px; display: flex; align-items: center; gap: 8px;">
                    <i class="bi bi-circle-fill" style="color: #8b5cf6; font-size: 0.8rem;"></i>
                    Estados de Autorización
                </h5>
                <div style="display: flex; flex-direction: column; gap: 10px;">
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <span style="background: #d1fae5; color: #065f46; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                            APROBADO
                        </span>
                        <span style="font-size: 14px; color: #6b7280;">Visita autorizada por ti</span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <span style="background: #fee2e2; color: #991b1b; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                            RECHAZADO
                        </span>
                        <span style="font-size: 14px; color: #6b7280;">Visita rechazada por ti</span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <span style="background: #fef3c7; color: #92400e; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                            PENDIENTE
                        </span>
                        <span style="font-size: 14px; color: #6b7280;">Esperando tu respuesta</span>
                    </div>
                </div>
            </div>
        </div>

        <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #e5e7eb;">
            <p style="margin: 0; color: #6b7280; font-size: 14px;">
                <i class="bi bi-lightbulb" style="color: #f59e0b; margin-right: 8px;"></i>
                Este historial muestra todas las visitas que han solicitado acceso a tu vivienda, según el flujo del sistema.
                El <strong>tiempo de estancia</strong> se calcula automáticamente al registrar la salida.
            </p>
        </div>
    </div>

    <!-- Acceso rápido -->
    <div style="display: flex; flex-wrap: wrap; gap: 12px; margin-bottom: 30px; padding: 20px; background: white; border-radius: 10px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);">
        <a href="/Residente/Index"
           style="background: #dbeafe; color: #1e40af; padding: 12px 20px; border-radius: 6px; text-decoration: none; display: flex; align-items: center; gap: 8px; font-weight: 500; transition: all 0.2s;">
            <i class="bi bi-house-door"></i>
            Dashboard Principal
        </a>

        <a href="/Residente/Notificaciones"
           style="background: #fef3c7; color: #92400e; padding: 12px 20px; border-radius: 6px; text-decoration: none; display: flex; align-items: center; gap: 8px; font-weight: 500; transition: all 0.2s;">
            <i class="bi bi-bell"></i>
            Notificaciones
        </a>

        <a href="/Residente/Preaprobados"
           style="background: #d1fae5; color: #065f46; padding: 12px 20px; border-radius: 6px; text-decoration: none; display: flex; align-items: center; gap: 8px; font-weight: 500; transition: all 0.2s;">
            <i class="bi bi-check-circle"></i>
            Visitantes Preaprobados
        </a>
    </div>
</div>

<style>
    /* Efectos hover */
    a[href*="/Residente/"]:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-decoration: none;
    }

    .table-hover tbody tr:hover {
        background-color: #f8fafc !important;
        transition: background-color 0.2s;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        div[style*="max-width: 1400px"] {
            padding: 15px 10px;
        }

        .encabezado-superior {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start !important;
        }

        div[style*="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))"] {
            grid-template-columns: 1fr !important;
            gap: 15px !important;
        }

        div[style*="grid-template-columns: repeat(auto-fit, minmax(300px, 1fr))"] {
            grid-template-columns: 1fr !important;
            gap: 15px !important;
        }

        .table-responsive {
            margin: 0 -10px;
            padding: 0 10px;
        }

        .table th, .table td {
            padding: 12px 8px !important;
            font-size: 14px;
            white-space: nowrap;
        }

        .badge {
            font-size: 11px !important;
            padding: 4px 8px !important;
        }
    }

    @@media (max-width: 480px) {
        .table th, .table td {
            font-size: 12px !important;
            padding: 10px 6px !important;
        }

        .access-links {
            flex-direction: column;
        }
    }
</style>